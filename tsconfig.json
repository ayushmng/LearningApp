{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDirs": ["App"],
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["App/components/*"],
      "@layouts/*": ["App/layouts/*"],
      "@modules/*": ["App/modules/*"],
      "@config/*": ["App/config/*"],
      "@services/*": ["App/services/*"],
      "@screens/*": ["App/screens/*"],
      "@redux/*": ["App/Redux/*"],
      "@saga/*": ["App/saga/*"],
      "@static/*": ["App/static/*"],
      "@utils/*": ["App/utility/*"],
      "@navigation/*": ["App/navigation/*"],
      "@theme/*": ["App/themes/*"],
      "@assets/*": ["App/Assets/*"],
      "@icons/*":["App/Assets/icons"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
